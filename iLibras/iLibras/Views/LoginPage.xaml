<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="iLibras.LoginPage"
    Title="Login">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Entry 
            x:Name="etyLogin" 
            Placeholder="Email" 
            MinimumWidthRequest="200" 
            WidthRequest="220"
            Keyboard="Email"/>
        <Entry 
            x:Name="etySenha" 
            IsPassword="true" 
            Placeholder="Senha" 
            MinimumWidthRequest="200" 
            WidthRequest="220"/>
        <Button 
            Text="Entrar" 
            x:Name="btnLogin" 
            BackgroundColor="Blue" 
            FontAttributes="Bold" 
            TextColor="White"
            Margin="10,15,10,10"
            Clicked="onLoginClickedAsync"/>
        <Label 
            Text="ou" 
            TextColor="Gray" 
            HorizontalOptions="Center"/>
        <Button 
            Text="Cria conta com e-mail" 
            x:Name="btnCadastrar" 
            BorderColor="Blue" 
            BorderWidth="2"
            BackgroundColor="White" 
            TextColor="Blue"
            Margin="10,10,10,15"
            Clicked="onCadastrarClikedAsync"/>
        </StackLayout>
</ContentPage>
